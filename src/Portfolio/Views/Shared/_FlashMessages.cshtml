@using Portfolio.Lib.ViewModels
@{
    var flashMessages = new FlashMessageCollection(TempData);
}

<div id="flash">
    @foreach (var flashMessage in flashMessages)
    {
        <div class="alert alert-@flashMessage.Key alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            @flashMessage.Message
        </div>
    }
</div>