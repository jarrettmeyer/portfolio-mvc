@model PasswordTestViewModel

@{
    ViewBag.Title = "Test Password";
}

<div class="page-header">
    <h2>@ViewBag.Title</h2>    
</div>

@using (Html.BeginForm("Test", "Password", FormMethod.Get, new { role = "form" }))
{
    <div class="row">
        <div class="col-lg-push-4 col-lg-4">
            <div class="form-group">
                <label for="Password" class="control-label">Password</label>
                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Password)                
            </div>        
            <div class="form-group">
                @Model.HashedPassword
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="@Url.Action("Forgot", "Password")" class="btn btn-default">Forgot Password</a>
            </div>
        </div>        
    </div>    
}
